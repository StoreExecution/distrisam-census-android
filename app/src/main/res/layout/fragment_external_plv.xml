<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".LocalityFragment">


    <RelativeLayout
        android:id="@+id/rlTinda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/tinda_coca" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/tinda_logo_coca" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ivContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlTinda"
        android:layout_alignParentRight="true"

        >

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_info"
            android:tint="@color/colorAccent" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivContainer"
        android:layout_marginHorizontal="20dp"
        android:background="@color/float_transparent"


        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btAddTinda"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/outline_simple"
                        android:drawableLeft="@drawable/tindadrawble"
                        android:elevation="4dp"
                        android:paddingHorizontal="10dp"
                        android:text=" Ajouter des tinda"
                        android:textColor="@color/colorAccent"
                        android:tint="@color/colorAccent"


                        />

                    <co.lujun.androidtagview.TagContainerLayout
                        android:id="@+id/tgTinda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="9"
                        android:padding="10dp"


                        app:container_background_color="#fff"
                        app:container_border_color="@color/colorWhite"
                        app:horizontal_interval="10dp"
                        app:tag_background_color="@color/colorAccent"
                        app:tag_border_color="@color/colorAccent"
                        app:tag_clickable="true"
                        app:tag_text_color="@color/colorWhite"

                        app:tag_text_size="15sp"
                        app:tag_theme="none"
                        app:vertical_interval="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <Button
                        android:id="@+id/btAddEar"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/outline_simple"

                        android:drawableLeft="@drawable/eardrawble"
                        android:elevation="4dp"
                        android:text="Ajouter des oreilles"
                        android:textColor="@color/colorAccent"
                        android:tint="@color/colorAccent"

                        />

                    <co.lujun.androidtagview.TagContainerLayout
                        android:id="@+id/tgEar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="9"
                        android:padding="10dp"


                        app:container_background_color="#fff"
                        app:container_border_color="#fff"
                        app:horizontal_interval="10dp"
                        app:tag_background_color="@color/colorAccent"
                        app:tag_border_color="@color/colorPrimaryDark"
                        app:tag_clickable="true"
                        app:tag_text_color="@color/colorWhite"

                        app:tag_text_size="15sp"
                        app:tag_theme="none"
                        app:vertical_interval="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btAddPotence"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/outline_simple"
                        android:drawableLeft="@drawable/potancedrawble"

                        android:elevation="4dp"
                        android:text="Ajouter des potences"
                        android:textColor="@color/colorAccent"
                        android:tint="@color/colorAccent" />

                    <co.lujun.androidtagview.TagContainerLayout
                        android:id="@+id/tgPotence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="9"


                        android:padding="10dp"

                        app:container_background_color="#fff"
                        app:container_border_color="#fff"
                        app:horizontal_interval="10dp"
                        app:tag_background_color="@color/colorAccent"
                        app:tag_border_color="@color/colorPrimaryDark"
                        app:tag_clickable="true"
                        app:tag_text_color="@color/colorWhite"

                        app:tag_text_size="15sp"
                        app:tag_theme="none"
                        app:vertical_interval="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/tgAddWindow"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/outline_simple"
                        android:drawableLeft="@drawable/windowdrawble"

                        android:elevation="4dp"
                        android:text="Ajouter des habillage vitrine"
                        android:textColor="@color/colorAccent"
                        android:tint="@color/colorAccent" />

                    <co.lujun.androidtagview.TagContainerLayout
                        android:id="@+id/tgWindow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="9"


                        android:padding="10dp"

                        app:container_background_color="#fff"
                        app:container_border_color="#fff"
                        app:horizontal_interval="10dp"
                        app:tag_background_color="@color/colorAccent"
                        app:tag_border_color="@color/colorPrimaryDark"
                        app:tag_clickable="true"
                        app:tag_text_color="@color/colorWhite"

                        app:tag_text_size="15sp"
                        app:tag_theme="none"
                        app:vertical_interval="10dp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tvExternalPlv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Photos"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/photo_red" />


            </LinearLayout>
        </ScrollView>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/llNavigation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/fabPrev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_navigation_back"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/fabNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_navigation"
            android:src="@drawable/ic_arrow_forward" />
    </LinearLayout>

</RelativeLayout>