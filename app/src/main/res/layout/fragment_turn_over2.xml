<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    >


    <RelativeLayout
        android:id="@+id/rlTinda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/tinda_coca" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/tinda_logo_coca" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlTinda"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="50dp"
        android:background="@color/float_transparent"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"

            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawableRight="@drawable/rouiba"

                        android:gravity="center"
                        android:text="Achats "
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:elevation="4dp"
                            android:gravity="center"

                            app:cardCornerRadius="4dp"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivbox"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:src="@drawable/rouiba_pack" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btMinusRouibaLow"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="-"
                                            android:textColor="@color/colorWhite" />


                                        <EditText
                                            android:id="@+id/etRouibaLow"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"


                                            android:layout_marginHorizontal="1dp"
                                            android:layout_weight="2"
                                            android:background="@drawable/edittext_background_2"
                                            android:gravity="center"

                                            android:hint="Caisse"

                                            android:inputType="numberSigned" />

                                        <Button
                                            android:id="@+id/btPlusRouibaLow"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="+"
                                            android:textColor="@color/colorWhite" />
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"

                                    android:scaleType="centerInside"
                                    android:src="@drawable/storm" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"


                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:src="@drawable/rouiba_pack" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ivbox"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btMinusRouibaHigh"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="-"
                                            android:textColor="@color/colorWhite" />


                                        <EditText
                                            android:id="@+id/etRouibaHigh"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"


                                            android:layout_marginHorizontal="1dp"
                                            android:layout_weight="2"
                                            android:background="@drawable/edittext_background_2"
                                            android:gravity="center"

                                            android:hint="Caisse"

                                            android:inputType="numberSigned" />

                                        <Button
                                            android:id="@+id/btPlusRouibaHigh"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="+"
                                            android:textColor="@color/colorWhite" />
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"

                                    android:scaleType="centerInside"
                                    android:src="@drawable/sun" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawableRight="@drawable/rouiba"

                        android:gravity="center"
                        android:text="Achats PET "
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:elevation="4dp"
                            android:gravity="center"

                            app:cardCornerRadius="4dp"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:src="@drawable/rouibapet_pack" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ivbox"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btMinusRouibaPetLow"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="-"
                                            android:textColor="@color/colorWhite" />


                                        <EditText
                                            android:id="@+id/etRouibaPetLow"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"


                                            android:layout_marginHorizontal="1dp"
                                            android:layout_weight="2"
                                            android:background="@drawable/edittext_background_2"
                                            android:gravity="center"

                                            android:hint="Caisse"

                                            android:inputType="numberSigned" />

                                        <Button
                                            android:id="@+id/btPlusRouibaPetLow"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="+"
                                            android:textColor="@color/colorWhite" />
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"

                                    android:scaleType="centerInside"
                                    android:src="@drawable/storm" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"

                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:src="@drawable/rouibapet_pack" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ivbox"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btMinusRouibaPetHigh"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="-"
                                            android:textColor="@color/colorWhite" />


                                        <EditText
                                            android:id="@+id/etRouibaPetPetHigh"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"


                                            android:layout_marginHorizontal="1dp"
                                            android:layout_weight="2"
                                            android:background="@drawable/edittext_background_2"
                                            android:gravity="center"

                                            android:hint="Caisse"

                                            android:inputType="numberSigned" />

                                        <Button
                                            android:id="@+id/btPlusRouibaPetHigh"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorAccent"
                                            android:padding="0dp"
                                            android:text="+"
                                            android:textColor="@color/colorWhite" />
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"

                                    android:scaleType="centerInside"
                                    android:src="@drawable/sun" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawableRight="@drawable/rouiba"

                        android:gravity="center"
                        android:text="Disponibilité produit "
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvRouiba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:elevation="4dp"
                            android:gravity="center"

                            app:cardCornerRadius="4dp"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:src="@drawable/rouiba_packlitre" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"


                                        android:gravity="center"
                                        android:text="Rouiba disponible "
                                        android:textColor="@color/colorAccent"
                                        android:textSize="19sp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                <CheckBox
                                    android:id="@+id/cbRouiba"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"


                                    />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvRouibapet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"

                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:src="@drawable/rouiba_bottle" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"


                                        android:gravity="center"
                                        android:text="Rouiba Pet disponible "
                                        android:textColor="@color/colorAccent"
                                        android:textSize="19sp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                <CheckBox
                                    android:id="@+id/cbRouibapet"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"


                                    />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/llNavigation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/fabPrev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_navigation_back"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"

            />

        <ImageView
            android:id="@+id/fabNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_navigation"
            android:src="@drawable/ic_arrow_forward" />
    </LinearLayout>
</RelativeLayout>
